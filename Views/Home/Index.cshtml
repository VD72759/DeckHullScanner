@{
    ViewData["Title"] = "Home";
}
<script src="~/js/homepage.js" asp-append-version="true"></script>

<div class="row">
    <div class="wrapper">
        <div class="scanner">
            <div class="top-header row">
                <label class="EMPLabel col-md-5 col-4">EMP #</label>
                <input type="text" id="EmpId" custAttr="numberonly" class="col-md-4 col-7" value="" />
                <input type="hidden" id="EmpType" style="display:none" value="" />
                <input type="hidden" style="display:none" id="CheckEmployeeExists" value="@Url.Action("CheckEmployeeExists", "Ajax")" />
            </div>
            <div class="scanner-keys">
                <div class="row no-margin-right no-margin-left">
                    <div class="col-md-6 col-6">
                        <button type="button" id="fullBtn" class="btn-white empTypeBtn" value="full">FULL</button>
                    </div>
                    <div class="col-md-6 col-6">
                        <button type="button" id="tempBtn" class="btn-white empTypeBtn" value="temporary">TEMP</button>
                    </div>                    
                </div>
                <div class="row no-margin-right no-margin-left">
                    <div class="col-md-4 col-4">
                        <button type="button" value="1" class="btn">1</button>
                    </div>
                    <div class="col-md-4 col-4">
                        <button type="button" value="2" class="btn">2</button>
                    </div>
                    <div class="col-md-4 col-4">
                        <button type="button" value="3" class="btn">3</button>
                    </div>
                </div>
                <div class="row no-margin-right no-margin-left">
                    <div class="col-md-4 col-4">
                        <button type="button" value="4" class="btn">4</button>
                    </div>
                    <div class="col-md-4 col-4">
                        <button type="button" value="5" class="btn">5</button>
                    </div>
                    <div class="col-md-4 col-4">
                        <button type="button" value="6" class="btn">6</button>
                    </div>
                </div>
                <div class="row no-margin-right no-margin-left">
                    <div class="col-md-4 col-4">
                        <button type="button" value="7" class="btn">7</button>
                    </div>
                    <div class="col-md-4 col-4">
                        <button type="button" value="8" class="btn">8</button>
                    </div>
                    <div class="col-md-4 col-4">
                        <button type="button" value="9" class="btn">9</button>
                    </div>                    
                </div>
                <div class="row no-margin-right no-margin-left">
                    <div class="col-md-4 col-4">
                        <button type="button" value="clr" class="btn">CLR</button>
                    </div>
                    <div class="col-md-4 col-4">
                        <button type="button" value="0" class="btn">0</button>
                    </div>
                    <div class="col-md-4 col-4">
                        <button type="button" value="del" class="btn">DEL</button>
                    </div>
                </div>
                <div class="row no-margin-right no-margin-left">
                    <div class="col-md-12 col-12">
                        <button type="button" value="enter" class="btn">ENTER</button>
                    </div>
                </div>
                <div class="row no-margin-right no-margin-left">
                    <div class="col-md-12 col-12">
                        <label class="version">@ViewBag.AppVersion</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


